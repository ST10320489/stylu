<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">

        <!-- Outfit Name Header -->
        <TextView
            android:id="@+id/tvEditingOutfit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:text="Editing Outfit"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#5A2E5A"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Help Text -->
        <TextView
            android:id="@+id/tvHelpText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:text="Drag with 1 finger â€¢ Pinch with 2 fingers to resize"
            android:textSize="12sp"
            android:textColor="#999999"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvEditingOutfit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Canvas Container for Outfit Items -->
        <FrameLayout
            android:id="@+id/canvasContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvHelpText"
            app:layout_constraintBottom_toTopOf="@id/actionButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.6">

            <!-- FAB to Add Items -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAddItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="Add items to outfit"
                app:backgroundTint="#5A2E5A"
                app:tint="@android:color/white"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp"/>

            <!-- Empty State (shown when no items) -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/cloudy"
                    android:alpha="0.3"
                    android:contentDescription="No items"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No items yet"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap + to add items"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Cancel Button -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary_bg"
                android:text="Cancel"
                android:textColor="#5A2E5A"
                android:fontFamily="@font/poppinsmedium"
                android:textAllCaps="false"/>

            <!-- Delete Button (Optional) -->
            <Button
                android:id="@+id/btnDeleteOutfit2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary_bg"
                android:text="Delete"
                android:textColor="#D32F2F"
                android:fontFamily="@font/poppinsmedium"
                android:textAllCaps="false"
                android:visibility="gone"
                tools:visibility="visible"/>

            <!-- Update Button -->
            <Button
                android:id="@+id/btnSaveOutfit"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_primary_bg"
                android:text="Update Outfit"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppinsmedium"
                android:textAllCaps="false"/>
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="#5A2E5A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>