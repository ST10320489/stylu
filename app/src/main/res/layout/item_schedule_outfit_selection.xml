<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOutfit"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_gravity="center"
        app:cardElevation="3dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Outfit Preview -->
            <FrameLayout
                android:id="@+id/outfitPreviewContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_grey"/>

            <!-- Selection Overlay -->
            <View
                android:id="@+id/selectionOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_primary"
                android:visibility="gone"/>

            <!-- Check Icon -->
            <ImageView
                android:id="@+id/ivCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top|end"
                android:layout_margin="6dp"
                android:src="@drawable/ic_check_circle"
                android:background="@drawable/circle_bg"
                android:padding="2dp"
                app:tint="@color/purple_primary"
                android:visibility="gone"/>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Outfit Name -->
    <TextView
        android:id="@+id/tvOutfitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Casual Friday"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:maxLines="2"
        android:ellipsize="end"/>

    <!-- Color Dots -->
    <LinearLayout
        android:id="@+id/colorDotsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"/>

</LinearLayout>