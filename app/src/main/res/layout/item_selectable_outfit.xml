<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardOutfit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="2dp"
    app:cardCornerRadius="16dp"
    app:strokeWidth="0dp"
    app:strokeColor="@color/purple_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Outfit Preview -->
        <FrameLayout
            android:id="@+id/outfitPreviewContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/light_grey">

            <!-- Selection Overlay -->
            <View
                android:id="@+id/selectionOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80673AB7"
                android:visibility="gone"/>

            <!-- Check Icon -->
            <ImageView
                android:id="@+id/ivCheckmark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_circle"
                app:tint="@android:color/white"
                android:visibility="gone"
                android:elevation="4dp"/>

        </FrameLayout>

        <!-- Outfit Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvOutfitName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Casual Friday"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="8dp"/>

            <!-- Color Dots -->
            <LinearLayout
                android:id="@+id/colorDotsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>