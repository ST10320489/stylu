<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivScheduledOutfit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="Outfit preview"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvOutfitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outfit Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvScheduledDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon, Jan 1"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvWeatherInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15°-25° • Sunny"
                android:textSize="12sp"
                android:textColor="@color/purple_primary"
                android:layout_marginTop="4dp"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnDeleteSchedule"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Remove schedule"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>