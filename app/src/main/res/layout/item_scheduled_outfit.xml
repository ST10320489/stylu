<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivOutfit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_bg"
            android:src="@drawable/default_outfit" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvOutfitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outfit Name"
                android:textSize="16sp"
                android:textColor="#5A2E5A"
                android:fontFamily="@font/poppinssemibold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to view details"
                android:textSize="12sp"
                android:textColor="#999999"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnReschedule"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_forward"
            android:padding="4dp"
            app:tint="#5A2E5A"
            android:contentDescription="Reschedule" />
    </LinearLayout>

</androidx.cardview.widget.CardView>