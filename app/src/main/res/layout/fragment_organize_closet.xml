<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/organize_closet"
        android:textSize="24sp"
        android:textColor="@color/purple_primary"
        android:fontFamily="@font/poppinssemibold"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Indicator -->
    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 / 10"
        android:textSize="16sp"
        android:textColor="@color/purple_text"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Container -->
    <FrameLayout
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintTop_toBottomOf="@id/tvProgress"
        app:layout_constraintBottom_toTopOf="@id/actionButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Swipe Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/swipeCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivItemImage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_img"
                    android:contentDescription="@string/item_image" />

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_marginTop="16dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvItemDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category • Size • Color"
                    android:textSize="14sp"
                    android:textColor="@color/purple_text"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvTimesWorn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/times_worn_label"
                    android:textSize="14sp"
                    android:textColor="@color/purple_text"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Swipe Direction Overlays -->
        <View
            android:id="@+id/keepOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8000FF00"
            android:visibility="gone" />

        <View
            android:id="@+id/discardOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FF0000"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/actionButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabDiscard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_close"
            app:tint="@android:color/white"
            app:backgroundTint="#FF5252"
            android:contentDescription="@string/discard" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabKeep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_check"
            app:tint="@android:color/white"
            app:backgroundTint="#4CAF50"
            android:contentDescription="@string/keep" />
    </LinearLayout>

    <!-- Swipe Instructions -->
    <TextView
        android:id="@+id/tvSwipeInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/swipe_instructions"
        android:textSize="12sp"
        android:textColor="@color/purple_text"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:alpha="0.7"
        app:layout_constraintBottom_toTopOf="@id/actionButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>