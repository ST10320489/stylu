<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Outfit Preview Container (no border) -->
        <FrameLayout
            android:id="@+id/outfitPreviewContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"/>

        <!-- Bottom section with name and colors -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@android:color/white">

            <!-- Outfit Name -->
            <TextView
                android:id="@+id/tvOutfitName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Outfit Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/purple_primary"
                android:fontFamily="@font/poppinssemibold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Color Dots Container -->
            <LinearLayout
                android:id="@+id/colorDotsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>