<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_wardrobe"
        android:name="com.iie.st10320489.stylu.ui.wardrobe.WardrobeFragment"
        android:label="@string/title_wardrobe"
        tools:layout="@layout/fragment_wardrobe">

        <action
            android:id="@+id/action_navigation_wardrobe_to_createOutfitFragment"
            app:destination="@id/createOutfitFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>

        <action
            android:id="@+id/action_wardrobe_to_outfit_detail"
            app:destination="@id/outfitDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.iie.st10320489.stylu.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profile_to_profileSettings"
            app:destination="@id/fragment_profile_settings" />

        <action
            android:id="@+id/action_profile_to_systemSettings"
            app:destination="@id/fragment_system_settings" />
    </fragment>

    <fragment
        android:id="@+id/fragment_profile_settings"
        android:name="com.iie.st10320489.stylu.ui.profile.ProfileSettingsFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile_settings" />

    <fragment
        android:id="@+id/fragment_system_settings"
        android:name="com.iie.st10320489.stylu.ui.profile.SystemSettingsFragment"
        android:label="System"
        tools:layout="@layout/fragment_system_settings" />

    <fragment
        android:id="@+id/navigation_add_item"
        android:name="com.iie.st10320489.stylu.ui.item.AddItemFragment"
        android:label="Add Item"
        tools:layout="@layout/fragment_add_item">

        <action
            android:id="@+id/action_addItem_to_items"
            app:destination="@id/navigation_item"
            app:popUpTo="@id/navigation_item"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/createOutfitFragment"
        android:name="com.iie.st10320489.stylu.ui.wardrobe.CreateOutfitFragment"
        android:label="Create Outfit"
        tools:layout="@layout/fragment_create_outfit"/>

    <fragment
        android:id="@+id/outfitDetailFragment"
        android:name="com.iie.st10320489.stylu.ui.wardrobe.OutfitDetailFragment"
        android:label="Outfit Detail"
        tools:layout="@layout/fragment_outfit_detail"/>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.iie.st10320489.stylu.ui.home.HomeFragment"
        android:label="Home">

        <action
            android:id="@+id/action_home_to_addItem"
            app:destination="@id/navigation_add_item"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/navigation_item"
        android:name="com.iie.st10320489.stylu.ui.item.ItemFragment"
        android:label="Wardrobe">

        <action
            android:id="@+id/action_items_to_addItem"
            app:destination="@id/navigation_add_item"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />


        <action
            android:id="@+id/action_items_to_createOutfit"
            app:destination="@id/createOutfitFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

</navigation>